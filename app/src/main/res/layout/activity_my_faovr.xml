<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.MyFaovrActivity"
    android:background="#4097EF50">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#55A416"
        android:orientation="horizontal"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layerType="software"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="나의 선호도 목록"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_weight="1"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp">
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/black"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#55A416"
            android:padding="15px"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="분류"
            android:gravity="center"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/black"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:id="@+id/ko"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="한식"/>
        <CheckBox
            android:id="@+id/ch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="중식"/>
        <CheckBox
            android:id="@+id/ja"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="일식"/>
        <CheckBox
            android:id="@+id/kita"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="기타"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/black"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:background="#55A416"
                android:padding="15px"
                android:text="매운 정도"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/black"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"/>
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/ra_noeat1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전혀 못 먹어요"/>
            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/ra_noeat2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="거의 못 먹어요"/>
            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/ra_so"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="평범해요"/>

        </RadioGroup>
        <RadioGroup

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/ra_good"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="매운거 잘 먹어요"/>
            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/ra_good2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="매운거 먹는게 취미에요"/>
        </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/black"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:background="#55A416"
            android:text="식습관 유형"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:padding="15px"
            android:gravity="center"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/black"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"/>
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/re_me"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="육식"/>
            <RadioButton
                android:id="@+id/ra_ve"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="비건"/>
            <RadioButton
                android:id="@+id/ra_nop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="상관없음"/>
        </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/black"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:background="#55A416"
            android:padding="15px"
            android:text="칼로리"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center" />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/black"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"/>
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp">
            <RadioButton
                android:id="@+id/rowkal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="저 칼로리 선호"/>
            <RadioButton
                android:id="@+id/sokal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="보통 칼로리 선호"/>
            <RadioButton
                android:id="@+id/gokal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="고 칼로리 선호"/>
        </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/black"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:background="#55A416"
            android:padding="15px"
            android:text="평균 조리 시간"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/black"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"/>
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/m15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15분 이하"/>
            <RadioButton
                android:id="@+id/m15_m30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15~30분"/>
            <RadioButton
                android:id="@+id/m30_m60"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30~60분"/>
            <RadioButton
                android:id="@+id/m60_m120"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="60~120분"/>
        </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/m120"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="120분 이상"/>
        </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/black"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:background="#55A416"
            android:padding="15px"
            android:text="만들고 싶은 음식"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/black"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <CheckBox
                android:id="@+id/Ch_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="메인요리"/>
            <CheckBox
                android:id="@+id/side"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="반찬"/>
            <CheckBox
                android:id="@+id/dessert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="간식"/>
            <CheckBox
                android:id="@+id/soup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="국물요리"/>
            <CheckBox
                android:id="@+id/sauce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="소스"/>


        </LinearLayout>
    </LinearLayout>
</LinearLayout>